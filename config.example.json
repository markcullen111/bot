{
    "broker": {
        "name": "interactive_brokers",
        "paper_trading": true,
        "api_config": {
            "api_key": "YOUR_API_KEY_HERE",
            "api_secret": "YOUR_API_SECRET_HERE",
            "endpoint": "https://api.broker.com"
        }
    },
    "risk_limits": {
        "max_drawdown_limit": 10,
        "position_limit": 1000,
        "stop_loss": 5,
        "max_position_size_percent": 5,
        "max_leverage": 2.0,
        "daily_loss_limit": 3,
        "risk_per_trade": 1
    },
    "market_data": {
        "primary_source": "broker",
        "backup_source": "alpha_vantage",
        "update_interval": 1,
        "symbols": ["AAPL", "GOOGL", "MSFT"]
    },
    "strategies": {
        "active_strategies": [
            "mean_reversion",
            "trend_following"
        ],
        "strategy_configs": {
            "mean_reversion": {
                "lookback_period": 20,
                "entry_threshold": 2.0,
                "exit_threshold": 0.5
            },
            "trend_following": {
                "fast_period": 10,
                "slow_period": 30,
                "atr_period": 14
            }
        }
    },
    "execution": {
        "order_types": ["MARKET", "LIMIT", "STOP"],
        "default_order_type": "LIMIT",
        "retry_attempts": 3,
        "timeout_seconds": 30
    },
    "logging": {
        "level": "INFO",
        "log_trades": true,
        "log_orders": true,
        "log_positions": true,
        "log_file": "trading_system.log"
    }
} 